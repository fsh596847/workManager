<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layout_category" android:background="@drawable/title_bar"
	android:layout_width="wrap_content" android:layout_height="fill_parent"
	android:orientation="vertical">
	<FrameLayout android:layout_width="wrap_content"
		android:layout_gravity="center" android:layout_height="fill_parent">
		<ListView android:id="@+id/listView_categroy"
			android:layout_gravity="center" android:cacheColorHint="#00000000"
			android:divider="#cacbd1" android:dividerHeight="0.5px"
			android:fadingEdge="none" android:footerDividersEnabled="true"
			android:layout_height="fill_parent" android:layout_width="100dp"></ListView>
		<ProgressBar android:id="@+id/pbar_category"
			android:visibility="gone" android:layout_gravity="center"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></ProgressBar>		
	</FrameLayout>
</LinearLayout>
