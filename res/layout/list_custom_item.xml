<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_myexam_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_list_item"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/image_myExam_infoIcon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_margin="15dp"
        android:src="@drawable/mini_avatar_shadow" />

    <TextView
        android:id="@+id/tv_code"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="000001"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/image_myExam_infoIcon" >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="鍋剁劧鐗╄仈缃戠鎶€鏈夐檺鍏徃"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:gravity="right" >

            <ImageView
                android:id="@+id/View_arrived"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/arrived"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/View_quit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/quit"
                android:visibility="gone" />
        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/image_isvisited"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:src="@drawable/icon_constellation"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/image_myExam_tringle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/arrow1" />

    <TextView
        android:id="@+id/txt_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/image_myExam_infoIcon"
        android:text="鍦板潃锛?
        android:textColor="
        android:textSize="12dp" />

    <TextView
        android:id="@+id/text_myExam_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/txt_address"
        android:text="鍗椾腑鐜200鍙?
        android:textColor="
        android:textSize="12dp" />

</RelativeLayout>