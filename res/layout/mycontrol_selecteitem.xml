<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="match_parent"
	android:layout_height="match_parent">
	<Button android:text="《《" android:id="@+id/btnprevious"
		android:background="@drawable/btn_style_green" android:layout_width="50dp"
		android:layout_height="wrap_content"></Button>

	<EditText android:layout_width="wrap_content" android:gravity="center"
		android:id="@+id/txt_reason" android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp" android:layout_weight="1"
		android:layout_height="wrap_content" android:background="@drawable/search_bar_edit_bg"
		android:hint="调换原因">
	</EditText>

	<Button android:text="》》" android:id="@+id/btnnext"
		android:background="@drawable/btn_style_green" android:layout_width="50dp"
		android:layout_height="wrap_content"></Button>

</LinearLayout>
